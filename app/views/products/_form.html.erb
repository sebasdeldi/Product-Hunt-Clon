<div class="container">
	<div class="row">
		<center><h1><%=form_title%></h1></center>
		<div class="col-sm-6 col-sm-offset-3">
			<%= form_for @product do |f| %>



				<% if @product.errors.any? %>
				  <div class="alert alert-danger">
				    <ul>
				    <% @product.errors.full_messages.each do |msg| %>
				      <li><%= msg %></li>
				    <% end %>
				    </ul>
				  </div>
				<% end %>


				
				<div class="form-group">
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Add product name." %>
				</div>

				<div class="form-group">
					<%= f.url_field :url, class: "form-control input-lg", placeholder: "Add product URL." %>
				</div>

				<div class="form-group">
					<%= f.text_area :description, class: "form-control input-lg", placeholder: "Add product description." %>
				</div>


				<div class="form-group">
					<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
				</div>

			<% end %>
		</div>		
	</div>
	
</div>